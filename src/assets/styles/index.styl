:root {
  --baseColor: #333;
  --baseFont: -apple-system, BlinkMacSystemFont, Avenir Next, Avenir, Helvetica,
    sans-serif;
  --baseSize: 15px;
  --primary: #b8d941;
  --darkPrimary: #014017;
}

baseColor = #333
baseSize = 15px
darkPrimary = #014017
linkColor = #014017
gray1 = #F7FAFC

.container {
    max-width: 80vw;
    margin: auto
}

body {
  font-family: ubuntu, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: baseColor;
  margin: 0;
  padding: 0;
  font-size: baseSize;
}

h1 {
  font-size: 2.2rem;
  font-weight: bold;
}
h2 {
  font-size: 2rem;
  font-weight: bold;
}
h3 {
  font-size: 1.8rem;
  font-weight: bold;
}

h4 {
  font-size: 1.5rem;
  font-weight: bold;
}
h5 {
  font-size: 1.3rem;
  font-weight: bold;
}
h6 {
  
  font-weight: bold;
  font-size: 1rem
}

a {
  color: inherit;
  text-decoration: none;
  &:hover{
    text-decoration: none;
    color: inherit;
  }
}

.bg-gray-100{
background-color: gray1 !important
}

.page_wrapper {
  main {
    max-width: 60vw;
    margin: 2rem auto
  }
}

.draft_type {

    font-size: 1.1rem
  
   ol li {
      padding-left: 1rem;
      margin-top: 1rem;
      
    }
    .signature{
      width: 40vw;
      margin-right: 0
    }
 .body{
   p{
     margin: 2rem 0
     line-height: 1.5rem
   }
  
  }
